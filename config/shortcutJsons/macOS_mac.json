        {
          "action": "アプリケーションを隠す",
          "keys": ["Cmd", "H"],
          "description": "最前面のアプリケーションを隠す",
          "order": 4
        },
        {
          "action": "他のアプリを隠す",
          "keys": ["Option", "Cmd", "H"],
          "description": "最前面以外のすべてのアプリケーションを隠す",
          "order": 5
        },
        {
          "action": "強制終了",
          "keys": ["Option", "Cmd", "Esc"],
          "description": "アプリケーションの強制終了ダイアログを開く",
          "order": 6
        }
      ]
    },
    {
      "groupName": "ファイル・フォルダ操作",
      "order": 3,
      "description": "Finderでのファイル管理",
      "shortcuts": [
        {
          "action": "新しいフォルダ",
          "keys": ["Shift", "Cmd", "N"],
          "description": "新しいフォルダを作成する",
          "order": 1
        },
        {
          "action": "ファイルを複製",
          "keys": ["Cmd", "D"],
          "description": "選択したファイルを複製する",
