    {
      "groupName": "基本編集",
      "order": 5,
      "description": "基本的な編集操作",
      "shortcuts": [
        {
          "action": "コピー",
          "keys": ["Cmd", "C"],
          "description": "選択したテキストをコピーする",
          "order": 1
        },
        {
          "action": "貼付け",
          "keys": ["Cmd", "V"],
          "description": "クリップボードの内容を貼り付ける",
          "order": 2
