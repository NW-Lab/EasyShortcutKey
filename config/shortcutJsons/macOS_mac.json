        {
          "action": "ゴミ箱を空にする",
          "keys": ["Shift", "Cmd", "Delete"],
          "description": "ゴミ箱を空にする",
          "order": 4
        },
        {
          "action": "情報を見る",
          "keys": ["Cmd", "I"],
          "description": "選択したファイルの情報を表示する",
          "order": 5
        },
        {
          "action": "クイックルック",
          "keys": ["Space"],
          "description": "選択したファイルをクイックルックでプレビューする",
          "order": 6
        }
      ]
    },
    {
      "groupName": "スクリーンショット",
      "order": 4,
      "description": "画面キャプチャ機能",
      "shortcuts": [
        {
          "action": "スクリーンショットツール",
          "keys": ["Shift", "Cmd", "5"],
          "description": "スクリーンショット・画面収録ツールを開く",
          "order": 1
        },
        {
          "action": "全画面スクリーンショット",
          "keys": ["Shift", "Cmd", "3"],
          "description": "全画面のスクリーンショットを撮る",
          "order": 2
