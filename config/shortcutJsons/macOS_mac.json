        {
          "action": "切取り",
          "keys": ["Cmd", "X"],
          "description": "選択したテキストを切り取る",
          "order": 3
        },
        {
          "action": "元に戻す",
          "keys": ["Cmd", "Z"],
          "description": "最後の操作を元に戻す",
          "order": 4
        },
        {
          "action": "やり直し",
          "keys": ["Shift", "Cmd", "Z"],
          "description": "元に戻した操作をやり直す",
          "order": 5
        },
        {
          "action": "すべて選択",
          "keys": ["Cmd", "A"],
          "description": "すべてのテキストを選択する",
          "order": 6
        }
      ]
    }
  ]
