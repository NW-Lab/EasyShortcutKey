      "order": 1,
      "description": "AI支援による音声操作とタスク自動化",
      "shortcuts": [
        {
          "action": "Siriを起動 (音声)",
          "keys": ["Cmd", "Space"],
          "description": "Siriを音声で起動する（長押し）",
          "order": 1
        },
        {
          "action": "Spotlight検索",
          "keys": ["Cmd", "Space"],
          "description": "Spotlight検索を開く",
          "order": 2
        }
      ]
    },
    {
      "groupName": "システム操作",
      "order": 2,
      "description": "基本的なシステム操作",
      "shortcuts": [
        {
          "action": "アプリケーション切り替え",
          "keys": ["Cmd", "Tab"],
          "description": "開いているアプリケーション間を切り替える",
          "order": 1
        },
        {
          "action": "ウィンドウ切り替え",
          "keys": ["Cmd", "`"],
          "description": "同じアプリケーション内のウィンドウを切り替える",
          "order": 2
