{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Easy Shortcut Key Configuration",
  "description": "Configuration schema for multi-device shortcut key viewer",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Stable identifier for the element (recommended: UUID v4). Optional; used to track items across updates."
      },
      "appName": {
        "type": "string",
        "description": "Name of the application or program"
      },
      "disEnable": {
        "type": "boolean",
        "description": "If true the element is temporarily hidden from the UI. Can be used on program, group, or shortcut."
      },
      "order": {
        "type": "integer",
        "minimum": 1,
        "description": "Display order for programs (optional). If omitted, array order is preserved."
      },
      "icon": {
        "type": "string",
        "description": "Path to icon file (optional)"
      },
      "version": {
        "type": "string",
        "description": "Supported version range (optional)"
      },
      "groups": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "Stable identifier for the group (recommended: UUID v4)."
            },
            "groupName": {
              "type": "string",
              "description": "Name of the shortcut group"
            },
            "disEnable": {
              "type": "boolean",
              "description": "If true the group is temporarily hidden from the UI"
            },
            "order": {
              "type": "integer",
              "minimum": 1,
              "description": "Display order within the program (optional). If omitted, array order is preserved."
            },
            "description": {
              "type": "string",
              "description": "Description of the group (optional)"
            },
            "shortcuts": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string", "description": "Stable identifier for the shortcut (recommended: UUID v4)." },
                  "action": {
                    "type": "string",
                    "description": "Name of the action (Japanese allowed)"
                  },
                  "disEnable": {
                    "type": "boolean",
                    "description": "If true the shortcut is temporarily hidden from the UI"
                  },
                  "keys": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "minItems": 1,
                    "description": "Array of keys in order (modifiers first)"
                  },
                  "steps": {
                    "type": "array",
                    "description": "Optional multi-step instructions for this shortcut. Each element is a step object (type 'keys' is common). Example: press Cmd+K then Z",
                    "examples": [
                      [
                        { "keys": ["Cmd", "K"] },
                        { "keys": ["Z"] }
                      ]
                    ],
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": ["keys", "input", "ui", "wait", "macroRef"]
                        },
                        "keys": {
                          "type": "array",
                          "items": { "type": "string" }
                        },
                        "action": { "type": "string" },
                        "description": { "type": "string" },
                        "duration": { "type": "integer", "minimum": 0 }
                      },
                      "required": ["description"],
                      "additionalProperties": false
                    }
                  },
                  "description": {
                    "type": "string",
                    "description": "Detailed description of the action"
                  },
                  "context": {
                    "type": "string",
                    "description": "Specific context where this shortcut applies (optional)"
                  },
                  "order": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Display order within the group (optional)"
                  }
                },
                "required": ["action", "description"],
                "oneOf": [
                  { "required": ["keys"] },
                  { "required": ["steps"] }
                ],
                "additionalProperties": false
              }
            }
          },
          "required": ["groupName", "shortcuts"],
          "additionalProperties": false
        }
      }
    },
    "required": ["appName", "groups"],
    "additionalProperties": false
  }
}